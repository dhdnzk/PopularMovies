<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.popularmovies.activities.MovieDetailActivity">

    <TextView
        android:id="@+id/tv_movie_title"
        android:layout_width="344dp"
        android:layout_height="103dp"
        android:text="Title"
        android:textSize="30sp"
        android:autoSizeMinTextSize="22sp"
        android:autoSizePresetSizes="40sp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.565"
        app:layout_constraintTop_toTopOf="parent"
        android:autoSizeTextType="uniform"
        android:layout_marginTop="7dp" />

    <ImageView

        android:id="@+id/iv_posterImage"
        android:layout_width="147dp"
        android:layout_height="179dp"
        android:src="@android:mipmap/sym_def_app_icon"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
        android:layout_marginStart="8dp"
        android:layout_marginTop="22dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title" />

    <TextView
        android:id="@+id/tv_release_day"
        android:layout_width="106dp"
        android:layout_height="38dp"
        android:layout_marginLeft="29dp"
        android:text="release day"
        app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
        android:layout_marginTop="29dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_title" />

    <TextView
        android:id="@+id/tv_running_time"
        android:layout_width="85dp"
        android:layout_height="34dp"
        android:layout_marginLeft="29dp"
        android:text="running time"
        app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_release_day" />

    <TextView
        android:id="@+id/tv_rating"
        android:layout_width="63dp"
        android:layout_height="23dp"
        android:layout_marginLeft="29dp"
        android:text="rating"
        app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_running_time" />


    <Button
        android:id="@+id/bt_mark_as_favorite"
        android:layout_width="89dp"
        android:layout_height="47dp"
        android:textSize="10sp"
        android:layout_marginLeft="29dp"
        android:text="Mark as favorite"
        app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
        android:layout_marginTop="17dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_rating" />

    <ScrollView
        android:layout_width="347dp"
        android:layout_height="92dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="25dp"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_posterImage">

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="overview" />

    </ScrollView>

</android.support.constraint.ConstraintLayout>
