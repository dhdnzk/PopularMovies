<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.popularmovies.activities.MovieDetailActivity">

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="0dp"
            android:layout_height="124dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="25dp"
            android:textSize="60sp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/iv_posterImage"
            android:layout_width="175dp"
            android:layout_height="254dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            android:src="@android:mipmap/sym_def_app_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/tv_release_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginLeft="33dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            tools:text="release day"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/tv_running_time"
            android:visibility="invisible"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_day"
            tools:text="running time"
            android:layout_marginStart="13dp" />

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="63dp"
            android:layout_height="23dp"
            android:layout_marginLeft="13dp"
            android:textSize="22sp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            app:layout_constraintTop_toBottomOf="@+id/tv_running_time"
            tools:text="rating"
            android:layout_marginStart="13dp" />

        <Button
            android:id="@+id/bt_mark_as_favorite"
            android:visibility="invisible"
            android:layout_width="89dp"
            android:layout_height="48dp"
            android:textSize="10sp"
            android:layout_marginLeft="56dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            tools:text="Mark as favorite"
            app:layout_constraintBottom_toBottomOf="@+id/iv_posterImage"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="13dp"
            app:layout_constraintVertical_bias="0.238" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="546dp"
            android:layout_height="261dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            android:textSize="22sp"
            tools:text="overview"
            app:layout_constraintLeft_toRightOf="@+id/tv_release_day"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.925"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
