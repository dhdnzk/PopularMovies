<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.example.android.popularmovies.activities.MovieDetailActivity">

        <TextView
            android:id="@+id/tv_movie_title"
            android:layout_width="627dp"
            android:layout_height="68dp"
            android:textSize="40sp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.041"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="3dp"
            tools:text="Title" />

        <ImageView
            android:id="@+id/iv_posterImage"
            android:layout_width="189dp"
            android:layout_height="240dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/tv_movie_title"
            android:layout_marginStart="8dp"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            android:src="@android:mipmap/sym_def_app_icon" />

        <TextView
            android:id="@+id/tv_release_day"
            android:layout_width="106dp"
            android:layout_height="38dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="36dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            tools:text="release day"
            />

        <TextView
            android:id="@+id/tv_running_time"
            android:visibility="invisible"
            android:layout_width="85dp"
            android:layout_height="34dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_release_day"
            tools:text="running time"/>

        <TextView
            android:id="@+id/tv_rating"
            android:layout_width="63dp"
            android:layout_height="23dp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_running_time"
            tools:text="rating"/>

        <Button
            android:id="@+id/bt_mark_as_favorite"
            android:visibility="invisible"
            android:layout_width="89dp"
            android:layout_height="47dp"
            android:textSize="10sp"
            android:layout_marginLeft="13dp"
            app:layout_constraintLeft_toRightOf="@+id/iv_posterImage"
            android:layout_marginTop="67dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            tools:text="Mark as favorite"
            app:layout_constraintBottom_toBottomOf="@+id/iv_posterImage"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_overview"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_movie_title"
            tools:text="overview"
            app:layout_constraintLeft_toRightOf="@+id/tv_release_day"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.466"
            app:layout_constraintVertical_bias="0.062" />

    </android.support.constraint.ConstraintLayout>

</ScrollView>
